<%- include('partials/header'); -%>

    <h1>Compose</h1>

    <form class="" action="/compose" method="post">
        <div class="mb-3">
            <label for="titleInput" class="form-label">Text</label>
            <input type="text" name="postTitle" autocomplete="off" class="form-control" id="titleInput" >
          </div>
          <div class="mb-3">
            <label for="postArea" class="form-label">Post</label>
            <textarea class="form-control" name="postBody" id="postArea" rows="5"></textarea>
          </div>
          <button type="submit" name="button" class="btn btn-primary" style="margin-top: 10px">Publish</button>
    </form>
   

<%- include('partials/footer'); -%>    


